#!/usr/bin/env zsh

if [ "$HOST" = "badura" ] || [ "$HOST" = "cigma" ]; then

	waybar &
	swww init &
	blueman-applet &
	pasystray &
	nextcloud --background &

	sleep 1

	swww img $(random-wallpaper) &
	easyeffects --gapplication-service &

	sleep 1

	google-chrome-stable &
	firefox &

	sleep 2

	slack &
	alacritty --class ncspot --command ncspot &

	sleep 2

	obsidian &
	signal-desktop &

fi
